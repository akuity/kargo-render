{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "bookfile-schema.json",

	"definitions": {

		"configVersion": {
			"type": "string",
			"enum": ["v1alpha1"]
		},

		"relativePath": {
			"type": "string",
			"pattern": "^(?:\\w|\\.|(?:\\$\\{\\d+\\}))(?:\\w|\\.|/|-|(?:\\$\\{\\d+\\}))*$"
		},

		"branchName": {
			"type": "string",
			"pattern": "^(?:[\\w\\.-]+\/?)*\\w$"
		},

		"branchConfig": {
			"type": "object",
			"additionalProperties": false,
			"properties": {
				"name": {
					"$ref": "#/definitions/branchName"
				},
				"pattern": {
					"type": "string"
				},
				"appConfigs": {
					"type": "object",
					"additionalProperties": false,
					"patternProperties": {
						"^[\\w-]+$": {
							"$ref": "#/definitions/appConfig"	
						}
					}
				},
				"prs": {
					"$ref": "#/definitions/pullRequestConfig"
				}
			}
		},

		"appConfig": {
			"type": "object",
			"additionalProperties": false,
			"properties": {
				"configManagement": {
					"$ref": "#/definitions/configManagementConfig"
				},
				"k8s": {
					"type": "object"
				},

				"outputPath": {
					"$ref": "#/definitions/relativePath"
				},
				"combineManifests": {
					"type": "boolean"
				}
			}
		},

		"configManagementConfig": {
			"type": "object"
		},

		"pullRequestConfig": {
			"type": "object",
			"additionalProperties": false,
			"properties": {
				"enabled": {
					"type": "boolean"
				},
				"useUniqueBranchNames": {
					"type": "boolean"
				}
			}
		}

	},

	"title": "Config",
	"type": "object",
	"required": ["configVersion"],
	"additionalProperties": false,
	"properties": {
		"configVersion": {
			"$ref": "#/definitions/configVersion"
		},
		"branchConfigs": {
			"type": "array",
			"items": {
				"$ref": "#/definitions/branchConfig"
			}
		},
		"rendering": {
			"type": "object"
		}
	}
}
